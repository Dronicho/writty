{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
